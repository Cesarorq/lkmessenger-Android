<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="17dp">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/signal_colorPrimary" />

            <corners
                android:radius="8dp" />

            <padding
                android:top="17dp" />

        </shape>

    </item>

    <item
        android:width="24dp"
        android:height="24dp"
        android:gravity="center"
        android:left="64dp"
        android:top="-16dp">

        <rotate
            android:fromDegrees="45">

            <shape
                android:shape="rectangle">

                <solid
                    android:color="@color/signal_colorPrimary" />

            </shape>

        </rotate>

    </item>

</layer-list>