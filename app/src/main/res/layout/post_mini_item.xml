<?xml version="1.0" encoding="utf-8"?>
<org.thoughtcrime.securesms.components.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <org.thoughtcrime.securesms.components.SquareImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/signal_colorSurfaceVariant"
        android:scaleType="centerCrop" />
    <ImageView
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="4dp"
        android:alpha="0.9"
        app:srcCompat="@drawable/ic_fluent_square_multiple_20_filled"
        app:tint="@color/white"
        android:contentDescription="@string/multiply_icon" />
</org.thoughtcrime.securesms.components.SquareFrameLayout>